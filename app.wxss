/**app.wxss**/
.container {
  height: 100%;
  padding: 50px 10px;
} 

.table {
  border: 0px solid darkgray;
  font-size: 12px;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 35px;
  align-items: center;
}
.td {
    width:40%;
    justify-content: center;
    text-align: center;
}
.th {
  width: 40%;
  justify-content: center;
  background: #1890ff;
  color: #fff;
  display: flex;
  height: 35px;
  align-items: center;
  font-size: 14px;
}
.td-title {
  font-weight: bold;
}
.red {
  color: #f5222d;
}
.green {
  color: #52c41a;
}
